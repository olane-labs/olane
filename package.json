{
  "name": "@olane/o-root",
  "version": "0.7.5",
  "homepage": "https://olane.com",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "LICENSE-MIT",
    "LICENSE-APACHE"
  ],
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "test:node": "npm run test:node --workspaces --if-present",
    "test:browser": "npm run test:browser --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "deep:clean": "rm -rf node_modules && rm package-lock.json && npm run deep:clean --workspaces --if-present",
    "install:all": "npm install",
    "dev": "DEBUG=o-protocol:* npx tsx src/tests/index.ts",
    "docs:dev": "cd docs && mintlify dev",
    "docs:build": "cd docs && mintlify build",
    "start:prod": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "lerna:changed": "lerna changed",
    "lerna:diff": "lerna diff",
    "lerna:version:patch": "lerna version patch --force-publish --yes",
    "lerna:version:minor": "lerna version minor --force-publish --yes",
    "lerna:version:major": "lerna version major --force-publish --yes",
    "lerna:version:alpha": "lerna version prerelease --force-publish --preid alpha --yes",
    "lerna:version:beta": "lerna version prerelease --force-publish --preid beta --yes",
    "lerna:version:rc": "lerna version prerelease --force-publish --preid rc --yes",
    "lerna:publish": "lerna publish from-package --yes",
    "lerna:publish:dry": "lerna publish from-package --no-push --no-git-tag-version",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "release:alpha": "./scripts/release.sh alpha",
    "release:beta": "./scripts/release.sh beta",
    "release:rc": "./scripts/release.sh rc",
    "release:dry": "./scripts/release.sh patch --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/olane-labs/olane.git"
  },
  "author": "Olane Inc.",
  "license": "(MIT OR Apache-2.0)",
  "description": "Olane addressable p2p node used to host tools, data or anything else your heart can dream of.",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@tsconfig/node20": "^20.1.8",
    "@types/jest": "^30.0.0",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "aegir": "^47.0.24",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "lerna": "^9.0.3",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "debug": "^4.4.3",
    "dotenv": "^16.6.1",
    "multiformats": "^13.4.1"
  }
}
