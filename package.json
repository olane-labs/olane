{
  "name": "@olane/o-root",
  "version": "0.7.4",
  "homepage": "https://olane.com",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "LICENSE-MIT",
    "LICENSE-APACHE"
  ],
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "test:node": "npm run test:node --workspaces --if-present",
    "test:browser": "npm run test:browser --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "deep:clean": "rm -rf node_modules && rm package-lock.json && npm run deep:clean --workspaces --if-present",
    "install:all": "npm install",
    "dev": "DEBUG=o-protocol:* npx tsx src/tests/index.ts",
    "docs:dev": "cd docs && mintlify dev",
    "docs:build": "cd docs && mintlify build",
    "start:prod": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "lerna:changed": "lerna changed",
    "lerna:diff": "lerna diff",
    "lerna:version:patch": "lerna version patch --yes",
    "lerna:version:minor": "lerna version minor --yes",
    "lerna:version:major": "lerna version major --yes",
    "lerna:version:alpha": "lerna version prerelease --force-publish --preid alpha --yes",
    "lerna:version:beta": "lerna version prerelease --force-publish --preid beta --yes",
    "lerna:version:rc": "lerna version prerelease --force-publish --preid rc --yes",
    "lerna:publish": "lerna publish from-package --yes",
    "lerna:publish:dry": "lerna publish from-package --no-push --no-git-tag-version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/olane-labs/olane.git"
  },
  "author": "Olane Inc.",
  "license": "(MIT OR Apache-2.0)",
  "description": "Olane addressable p2p node used to host tools, data or anything else your heart can dream of.",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@tsconfig/node20": "^20.1.6",
    "@types/jest": "^30.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "aegir": "^47.0.21",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.6",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^16.2.0",
    "jest": "^30.0.0",
    "lerna": "^9.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "debug": "^4.4.1",
    "dotenv": "^16.5.0",
    "multiformats": "^13.3.7"
  }
}
